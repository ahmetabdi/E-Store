<p id="notice"><%= notice %></p>
<h1>Invoice</h1>
<p>
  <b>Name:</b>
  <%= @order.name %>
</p>

<p>
  <b>Address:</b>
  <%= @order.address %>
</p>

<p>
  <b>Email:</b>
  <%= @order.email %>
</p>

<p>
  <b>Pay type:</b>
  <%= @order.pay_type %>
</p>

<p>
  <b>Status:</b>
  <%= @order.status %>
</p>

<h1>Order:</h1>
<table class="table table-bordered">
  <tr>
    <th>Product Name</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Full Price</th>
  </tr>
  <% for cart_item in @order.cart_items %>
    <tr>
      <td><%= cart_item.product.name %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= number_to_currency(cart_item.unit_price, :unit => "£") %></td>
      <td><%= number_to_currency(cart_item.full_price, :unit => "£") %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="3"></td>
    <td>
      <b>Total:</b> <%= number_to_currency(@order.total_price, :unit => "£") %>
    </td>
  </tr>
</table>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
